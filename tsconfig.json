{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "types": ["node"],
  "exclude": ["node_modules"]
}
